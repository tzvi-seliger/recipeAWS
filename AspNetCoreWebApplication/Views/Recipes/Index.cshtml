@model List<AspNetCoreWebApplication.Models.FullRecipe>;

@{
    ViewData["Title"] = "Index";
}
<ul>

    @{for (int i = 0; i < Model.Count; i++)
        {
        <li>
            <h2>Recipe Name</h2>
            <p>@Model[i].recipe.RecipeName</p>
            <h2>Ingredients</h2>
            <ul>
                @{
                    for (int j = 0; j < Model[i].recipeList.Count; j++)
                    {
                        <li>
                            <div>@Model[i].recipeList[j].IngredientName</div>
                            <div>@Model[i].recipeList[j].Quantity</div>
                            <div>@Model[i].recipeList[j].Unit</div>
                        </li>
                    }
                }
            </ul>
            <h2>Instructions</h2>
            <ul>
                @{
                    for (int j = 0; j < Model[i].instructionList.Count; j++)
                    {
                        <li>@Model[i].instructionList[j].InstructionContent</li>
                    }
                }
            </ul>
        </li>
        }

    }
</ul>
<a href="~/ingredients/ingredientForm">Submit New Ingredient</a>
<a href="~/ingredients">See All Ingredients</a>


